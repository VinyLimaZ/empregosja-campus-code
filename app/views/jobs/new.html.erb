<%= form_for @job do |f| %>
    <%= f.label :title, "Título" %>
    <%= f.text_field :title %>
    <%= f.label :category, "Categoria" %>
    <%= f.text_field :category %>

    <%= f.label :company_id, "Empresa" %>
    <%= f.collection_select(:company_id, @companies, :id, :name, {prompt: true}, required: true) %>

    <%= f.label  :description, "Descrição" %>
    <%= f.text_area :description %>
    <%= f.label :location, "Localização" %>
    <%= f.text_field :location %>
    <%= f.label :featured, "Destaque: "  %>
    <%= f.check_box :featured %>
    <%= f.submit "Criar Vaga" %>
<% end %>
