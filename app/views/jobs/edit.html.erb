<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>
<%= form_for @job do |f| %>
  <%= f.label :title, 'Título' %>
  <%= f.text_field :title %>
  <%= f.label :company_id, "Empresa" %>
  <%= f.collection_select(:company_id, @companies, :id, :name, presence: true) %>
  <%= f.label :location, "Localização" %>
  <%= f.text_field :location %>
  <%= f.label :category_id, "Categoria" %>
  <%= f.collection_select(:category_id, @categories, :id, :name, presence: true) %>
  <%= f.label :description, "Descrição" %>
  <%= f.text_area :description %>
  <%= f.submit "Atualizar Vaga" %>
  <%= link_to("Home", root_path) %>
<% end %>
